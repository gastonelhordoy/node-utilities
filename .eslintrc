{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "strict": [
      2,
      "global"
    ],
    "linebreak-style": 2,
    "comma-style": [
      2,
      "last"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-use-before-define": 2,
    "quotes": [
      2,
      "single"
    ],
    "no-undef": 2,
    "semi": [
      2,
      "always"
    ],
    "eqeqeq": 2,
    "dot-location": [
      2,
      "property"
    ],
    "no-loop-func": 2
  }
}
